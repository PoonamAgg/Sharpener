class HelloWorld {
    public static void main(String[] args) {
      String[] ss={"love","eat","loves", "apple","very","sweet", "fruit"};
       int len =5;
       StringBuilder sb = new StringBuilder();
       for(String s:ss)
       {
           if(s.length()==len)
           {
               sb.append(s+" ");
           }
       }
       System.out.println(sb);
    }
}